<%- include('../layouts/header.ejs') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div>
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="overview-wrap">
                                    <h2 class="title-1">Quản lý nhân viên </h2>
                                    <a href="/admin/category/addPersonnel" class="au-btn au-btn-icon au-btn--blue">
                                        <i class="zmdi zmdi-plus"></i>thêm nhân viên</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row m-t-30">
                            <div class="col-md-12">
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                <th>Tên nhân viên</th>
                                                <th>Email</th>
                                                <th>Hình ảnh</th>
                                                <th>SDT</th>

                                                <th>Chức vụ</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.forEach(e=>{ %>
                                                <tr class="tr-shadow">
                                                    <td>
                                                        <%= e.HoTen %>
                                                    </td>
                                                    <td>
                                                        <span class="block-email">
                                                            <%= e.Email %>
                                                        </span>
                                                    </td>
                                                    <td><img src="/images/<%= e.Anh %>" alt="" width="70px"
                                                            height="70px"></td>
                                                    <td>
                                                        <%= e.SDT %>
                                                    </td>

                                                    <td class="desc">
                                                        <%= e.ChucVu %>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip"
                                                                data-placement="top" title="Send">
                                                                <i class="zmdi zmdi-mail-send"></i>
                                                            </button>
                                                            <a href="/admin/category/addPersonnel/<%= e.MaNhanVien %>"
                                                                class="item" data-toggle="tooltip" data-placement="top"
                                                                title="Edit">
                                                                <i class="zmdi zmdi-edit"></i>
                                                            </a>
                                                            <a href="/admin/category/deletePersonnel/<%= e.MaNhanVien %>"
                                                                class="item" data-toggle="tooltip" data-placement="top"
                                                                title="Delete">
                                                                <i class="zmdi zmdi-delete"></i>
                                                            </a>

                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="spacer"></tr>
                                                <% }) %>

                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a
                                    href="https://colorlib.com">Colorlib</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>